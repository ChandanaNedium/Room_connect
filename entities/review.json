{
  "name": "Review",
  "type": "object",
  "properties": {
    "property_id": {
      "type": "string",
      "description": "ID of the property being reviewed"
    },
    "user_id": {
      "type": "string",
      "description": "ID of user who wrote review"
    },
    "user_name": {
      "type": "string",
      "description": "Name of reviewer"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Rating out of 5"
    },
    "title": {
      "type": "string",
      "description": "Review title"
    },
    "comment": {
      "type": "string",
      "description": "Detailed review comment"
    },
    "stay_duration": {
      "type": "string",
      "description": "How long they stayed (e.g. '6 months')"
    },
    "helpful_count": {
      "type": "number",
      "default": 0,
      "description": "Number of users who found this helpful"
    },
    "is_current_tenant": {
      "type": "boolean",
      "default": false,
      "description": "Whether reviewer is currently staying"
    }
  },
  "required": [
    "property_id",
    "rating"
  ]
}
