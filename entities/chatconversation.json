{
  "name": "ChatConversation",
  "type": "object",
  "properties": {
    "participant_1_id": {
      "type": "string",
      "description": "First participant user ID"
    },
    "participant_1_name": {
      "type": "string",
      "description": "First participant name"
    },
    "participant_2_id": {
      "type": "string",
      "description": "Second participant user ID"
    },
    "participant_2_name": {
      "type": "string",
      "description": "Second participant name"
    },
    "property_id": {
      "type": "string",
      "description": "Related property ID if applicable"
    },
    "property_name": {
      "type": "string",
      "description": "Related property name"
    },
    "last_message": {
      "type": "string",
      "description": "Last message text"
    },
    "last_message_time": {
      "type": "string",
      "format": "date-time",
      "description": "When last message was sent"
    },
    "unread_count_1": {
      "type": "number",
      "default": 0,
      "description": "Unread count for participant 1"
    },
    "unread_count_2": {
      "type": "number",
      "default": 0,
      "description": "Unread count for participant 2"
    }
  },
  "required": [
    "participant_1_id",
    "participant_2_id"
  ]
}
